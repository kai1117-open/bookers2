

<main>
 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
<%= render "layouts/sub", book: @book_detail %>
    </div>
  
  
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">        
        <thead>
          <tr>
            <th class="user-image-column">image</th>
            <th class="user-name-column">name</th>
            <th colspan="1" class="show-actions-column"></th>
          </tr>
        </thead>        
                
        <tbody>        
          <% @users.each do |user|%>
          <tr>
            <td class="user-image-column">
            ã€€<% if user.profile_image.attached? %>
                <%= image_tag user.profile_image.variant(resize_to_fill: [80, 80]), class: "user-image-icon-column", alt: "User Profile Picture" %>
              <% else %>
                <%= image_tag "default-profile.jpg", class: "user-image-icon-column", size: "80x80" %>
              <% end %>
            </td>
            <td class="user-name-column">
              <%= user.name %>
            </td>
            <td class="show-actions-column">
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      
    </div>
  </div>
</main>