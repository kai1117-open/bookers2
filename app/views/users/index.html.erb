 <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        
      <h2>User info</h2>
          <% if current_user && current_user.profile_image.attached? %>
              <%= image_tag current_user.image, class: "img-thumbnail", alt: "User Profile Picture" %>
          <% else %>
              <%= image_tag "default-profile.jpg", class: "img-thumbnail", alt: "Default Profile Picture" %> <!-- デフォルト画像 -->
          <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
