<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>プロフィール編集</h2>
                           <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
        
        
        
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, placeholder: "名前", class: "form-control" %>
          </div>
          
          <div class="form-group">
            <label for="inputImage">Image</label></br>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>

          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, placeholder: "自己紹介", class: "form-control", rows: 3 %>
          </div>
          
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

