<main>
 <div class="container px-5 px-sm-0">
    <div class="row">
      
      <div class="col-md-3">
        
      <h2>User info</h2>
          <% if current_user && current_user.profile_image.attached? %>
              <%= image_tag current_user.image, class: "img-thumbnail", alt: "User Profile Picture" %>
          <% else %>
              <%= image_tag "default-profile.jpg" %> <!-- デフォルト画像 -->
          <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <a>
          <svg >
           ???
          </svg>
        </a>
      </div>
    
    
      <h2 class="mt-3">New book</h2>
      
      <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
      
            <%= form_with model: @book, local: true do |f| %>
              <div class="form-group">
                <label for="book_title">Title</label>
                <%= f.text_field :title, class: "form-control", id: "book_title" %>
              </div>
            
              <div class="form-group">
                <label for="book_body">Opinion</label>
                <%= f.text_area :body, class: "form-control", id: "book_body" %>
              </div>
            
              <div class="form-group">
                <%= f.submit '送信', class: "btn btn-primary" %>
              </div>
            <% end %>

    </div>
  
  
      <div class="col-md-8">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                  <thead>
                    <tr>
                      <th colspan="1"></th>
                      <th>Title</th>
                      <th>Opinion</th>
                    </tr>
                    
                  </thead>
                  
                  <tbody>
                    
                    <% @books.each do |book| %>
                      <tr>
                        
                        <td>
                        　　　<% if book.user.profile_image.attached? %> <!-- プロフィール画像が添付されているか確認 -->
                                <%= image_tag book.user.profile_image, class: "img-thumbnail", alt: "User Profile Picture" %> <!-- ユーザーのプロフィール画像を表示 -->
                              <% else %>
                                <%= image_tag "default-profile.jpg" %> <!-- デフォルト画像を表示 -->
                            <% end %>
                        </td>
                        
                        <td>
                            <%= link_to book.title, book_path(book) %>
                        </td>
                        
                        <td>
                            <%= book.body %>
                        </td>
                        
                      </tr>
                    <% end %>
                    
                  </tbody>
                </table>
</div>
      
    </div>
  </div>
</main>