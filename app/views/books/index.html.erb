<h2>Books</h2>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    
  </thead>
  
  <tbody>
    
    <% @books.each do |book| %>
      <tr>
        
        <td>
          <% if book.user.image.attached? %>
            <%= image_tag book.user.image, class: "img-thumbnail", alt: "User Profile Picture" %>
          <% else %>
            <%= image_tag "default-profile.jpg", class: "img-thumbnail", alt: "Default Profile Picture" %> <!-- デフォルト画像 -->
          <% end %>
        </td>
        
        <td>
            <<%= book.title %>
        </td>
        
        <td>
            <%= book.body %>
        </td>
        
      </tr>
    <% end %>
    
  </tbody>
</table>
