<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Home", user_path(current_user), class: "nav-link" %>
            </li>    
            <li class="nav-item">
              <%= link_to "Users", users_path, class: "nav-link" %>
            </li>    
            <li class="nav-item">
              <%= link_to "Books", books_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Home", '/', class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "About", "/homes/about", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

  
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        
      <h2>User info</h2>
        <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.image, class: "img-thumbnail", alt: "User Profile Picture" %>
        <% else %>
            <%= image_tag "default-profile.jpg", class: "img-thumbnail", alt: "Default Profile Picture" %> <!-- デフォルト画像 -->
        <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>うしお</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <a>
          <svg >
           
          </svg>
        </a>
      </div>
    
      <h2 class="mt-3">New book</h2>
      
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: "form-control", id: "book_title" %>
          </div>
        
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area :body, class: "form-control", id: "book_body" %>
          </div>
        
          <div class="form-group">
            <%= f.submit '送信', class: "btn btn-primary" %>
          </div>
        <% end %>

    </div>
  
  
      <div class="col-md-8">
        <%= yield %>
      </div>
      
    </div>
  </div>
</main>
  </body>
<footer>
<div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

</html>
